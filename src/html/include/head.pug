head
  block site

  // google analytics
  include head_ga

  // meta, title
  meta(charset='utf-8')
  title=site.title
  meta(name="description", content=site.description)
  meta(name="keywords" content=site.keywords)
  meta(name="viewport" content=site.viewport)
  meta(name="format-detection" content=site.format_detection)

  //- ogp
  meta(property="og:title", content=site.title)
  meta(property="og:description", content=site.description)
  meta(property="og:type", content=site.og_type)
  meta(property="og:url", content=site.url)
  meta(property="og:image", content=site.og_img)
  meta(property="og:site_name" content=site.name)
  meta(property="og:locale" content=site.og_locale)
  meta(property="fb:app_id" content=site.fb_app_id)
  meta(property="fb:admins" content=site.fb_admins)
  meta(property="twitter:card", content=site.twitter_card)
  meta(property="twitter:site", content=site.twitter_site)

  // canonical
  link(rel="canonical" href=site.canonical)

  // css
  include head_css
